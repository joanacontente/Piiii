<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.insult.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:src="@drawable/imageview" />

    <ImageButton
        style="@android:style/Widget.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/disclaimer"
        android:onClick="disclaimMessage"
        android:src="@drawable/disclaimer"
        android:visibility="visible"
        tools:maxHeight="10dp"
        tools:maxWidth="5dp"
        android:layout_marginLeft="10dp"/>

    <ImageButton
        android:id="@+id/audioButton"
        style="@android:style/Widget.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/audiobutton"
        android:src="@drawable/audiobutton"
        tools:maxHeight="30dp"
        tools:maxWidth="30dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


    </RelativeLayout>

    <ImageButton
        android:id="@+id/insulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="randomInsult"
        android:background="@drawable/insultos"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"/>

    <ImageButton
        android:id="@+id/compliments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="randomCompliment"
        android:background="@drawable/piropos"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:shadowColor="#424242"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textColor="#212121"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        />

</RelativeLayout>
